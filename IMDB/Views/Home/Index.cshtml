@Model 
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Popcorn</title>
    <link rel="icon" sizes="15x15" href="logo_icon.png">
    <!--font awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/index.css" rel="stylesheet"/>
</head>

<body>
    <!--start navbar-->
    <nav class="navbar navbar-expand-sm">
        <div class="container">
            <!--logo-->
            <a class="navbar-brand" href="#"><img src="logo.png" alt="logo"></a>
            <!--button in case mobile-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">Actors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">Directors</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control" type="text" placeholder="Search...">
                </form>
                <div class="d-flex" style="align-items: center;" id="guest">
                    <a href="#" class="nav-link">Sign in</a>
                    /
                    <a href="#" class="nav-link">Login</a>
                </div>
                <!--show when user login-->
                <div class="d-none" id="user_login">
                    <a class="user-avatar" href="#">
                        <img src="" alt="User avatar" style="width:40px;" class="rounded-pill">
                        <p id="user_name">@Model.</p>
                    </a>
                    <a href="#" class="nav-link" id="logout">Logout</a>
                </div>
            </div>
        </div>
    </nav>
    <!--end navbar-->
    <!--start site opening-->
    <div class="most-watch">
        <div class="container">
            <div class="row">
                <!-- slider section -->
                <div class="col-sm-5">
                    <h3 class="h3-underline">Most watch now</h3>
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                        <!-- slider buttom controls -->
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                                    aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                                    aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                                    aria-label="Slide 3"></button>
                        </div>
                        <!-- slider content -->
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="Coda_poster.jpeg" class="d-block w-100 rounded" alt="Coda Movie">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>First slide label</h5>
                                    <p>Some representative placeholder content for the first slide.</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="a star is born.jpg" class="d-block w-100 rounded" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Second slide label</h5>
                                    <p>Some representative placeholder content for the second slide.</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="A_Quiet_Place_film_poster.png" class="d-block w-100 rounded" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Third slide label</h5>
                                    <p>Some representative placeholder content for the third slide.</p>
                                </div>
                            </div>
                        </div>
                        <!-- slider next & previous controler -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <!-- News section -->
                <div class="col-sm-6 news">
                    <h3 class="h3-underline">Cinema news</h3>
                    <div class="row news-card rounded">
                        <img class="col-sm-2" src="Will Smith.jpg" alt="Will Smith">
                        <div class="info col-sm-10">
                            <a href="#">Will Smith</a>
                            <p>Get the frist Oscar prize this year 2022<br>Best Performance by an Actor in a Leading Role</p>
                        </div>
                    </div>
                    <div class="row news-card rounded">
                        <img class="col-sm-2" src="Will Smith.jpg" alt="Will Smith">
                        <div class="info col-sm-10">
                            <a href="#">Will Smith</a>
                            <p>Get the frist Oscar prize this year 2022<br>Best Performance by an Actor in a Leading Role</p>
                        </div>
                    </div>
                    <div class="row news-card">
                        <img class="col-sm-2 rounded" src="Will Smith.jpg" alt="Will Smith">
                        <div class="info col-sm-10">
                            <a href="#">Will Smith</a>
                            <p>Get the frist Oscar prize this year 2022<br>Best Performance by an Actor in a Leading Role</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end site opening-->
    <!-- start movie section -->
    <div class="movie">
        <div class="container">
            <h3 class="h3-underline">Movies</h3>
            <div class="row">
                <div class="card-movie col-sm-3">
                    <div class="top-card" style="background:url( ../../img/Movies_Image/Fatherhood_poster.jpg) ;">
                        <div class="overlay">
                            <div class="card-content">
                                <h3>Fatherhood</h3>
                                <button>Go to movie</button>
                                <div class="info text-start">
                                    <p><span>category</span> -> Comedy</p>
                                    <div class="cast row">
                                        <h5>cast</h5>
                                        <div class="row ">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-movie col-sm-3">
                    <div class="top-card" style="background:url(Fear_Street_Part_One.png) ;">
                        <div class="overlay">
                            <div class="card-content">
                                <h3>Fear Street</h3>
                                <button>Go to movie</button>
                                <div class="info text-start">
                                    <p><span>category</span> -> Horro</p>
                                    <div class="cast row">
                                        <h5>cast</h5>
                                        <div class="row ">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-movie col-sm-3">
                    <div class="top-card" style="background:url(Call_poster.jpg) ;">
                        <div class="overlay">
                            <div class="card-content">
                                <h3>Call</h3>
                                <button>Go to movie</button>
                                <div class="info text-start">
                                    <p><span>category</span> -> suspense</p>
                                    <div class="cast row">
                                        <h5>cast</h5>
                                        <div class="row ">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                            <img src="Will Smith.jpg" alt="" class="col-4">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end movie section -->

    <!--start footer-->
    <footer>
        <div class="container">
            <h3>Copyrights © 2022 All rights reserved</h3>
        </div>
    </footer>
    <!--end footer-->

    <script>
              //$('.carousel').carousel()
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>