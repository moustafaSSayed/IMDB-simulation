<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" sizes="15x15" href="logo_icon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* start global */

        * {
            box-sizing: border-box
        }

        a {
            text-decoration: none;
        }

        body {
            margin: 0;
        }
        /* end global */

        /*start  navbar */
        nav {
            background-color: #07404A;
            color: white;
            position: fixed;
            top: 0;
        }

            nav a {
                color: #C2C8C5 !important;
            }

                nav a:hover {
                    color: white !important;
                }

            nav .navbar-brand img {
                width: 215px;
            }

        .navbar .navbar-nav {
            margin-right: 10%;
        }

        .navbar form {
            margin-right: 11%;
            width: 275px;
        }
        /*end  navbar */

        /* start footer */
        footer {
            background-color: #07404A;
            text-align: center;
            color: white;
            height: 50px;
        }
        /* end footer */
    </style>
</head>
<body>
    <!--start navbar-->
    <nav class="navbar navbar-expand-sm">
        <div class="container">
            <!--logo-->
            <a class="navbar-brand" href="#"><img src="logo.png" alt="logo"></a>
            <!--button in case mobile-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">Actors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">Directors</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control" type="text" placeholder="Search">
                </form>
                <div class="d-flex" id="guest">
                    <a href="#" class="nav-link">Sign in</a>
                    <a href="#" class="nav-link">Login</a>
                </div>
                <!--show when user login-->
                <div class="d-none" id="user_login">
                    <a class="user-avatar" href="#">
                        <img src="" alt="User avatar" style="width:40px;" class="rounded-pill">
                        <p id="user_name">@Model.</p>
                    </a>
                    <a href="#" class="nav-link" id="logout">Logout</a>
                </div>
            </div>
        </div>
    </nav>
    <!--end navbar-->
        @RenderBody()
    <!--start footer-->
    <footer>
        <div class="container">
            <h3>Copyrights © 2022 All rights reserved</h3>
        </div>
    </footer>
    <!--end footer-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
